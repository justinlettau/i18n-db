{
  "name": "i18n-db",
  "version": "1.5.2",
  "description": "A lightweight internationalization tool for managing translations, with JSON file output.",
  "keywords": [
    "i18n",
    "internationalization",
    "l10n",
    "localization",
    "translation",
    "globalization",
    "cli"
  ],
  "author": {
    "name": "Justin Lettau",
    "email": "me@justinlettau.com",
    "url": "https://justinlettau.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/justinlettau/i18n-db",
  "repository": {
    "type": "git",
    "url": "https://github.com/justinlettau/i18n-db"
  },
  "bugs": {
    "url": "https://github.com/justinlettau/i18n-db/issues"
  },
  "preferGlobal": true,
  "scripts": {
    "lint": "tslint -c ./tslint.json -p ./tsconfig.json",
    "test": "nyc jasmine JASMINE_CONFIG_PATH=jasmine.json",
    "posttest": "nyc report --reporter=json && codecov -f coverage/*.json",
    "build": "tsc -p ./tsconfig.json",
    "prepublishOnly": "npm run build",
    "release": "standard-version",
    "format": "prettier --write **/*.{js,ts}"
  },
  "bin": {
    "i18n": "bin/i18n"
  },
  "files": [
    "bin/",
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "chalk": "^3.0.0",
    "cli-table": "^0.3.1",
    "commander": "^5.0.0",
    "csv-parse": "^4.8.8",
    "csv-stringify": "^5.3.6",
    "fs-extra": "^9.0.0",
    "glob": "^7.1.6",
    "inquirer": "^7.1.0",
    "sqlite3": "^4.1.1",
    "typeorm": "^0.2.24",
    "update-notifier": "^4.1.0",
    "xliff": "^4.4.0"
  },
  "devDependencies": {
    "@justinlettau/tslint-config": "^0.1.0",
    "@types/cli-table": "^0.3.0",
    "@types/csv-parse": "^1.2.2",
    "@types/csv-stringify": "^3.1.0",
    "@types/fs-extra": "^8.1.0",
    "@types/glob": "^7.1.1",
    "@types/inquirer": "^6.5.0",
    "@types/jasmine": "^3.5.9",
    "@types/update-notifier": "^4.1.0",
    "codecov": "^3.6.5",
    "husky": "^4.2.3",
    "jasmine": "^3.5.0",
    "nyc": "^15.0.0",
    "prettier": "^1.19.1",
    "pretty-quick": "^3.0.0",
    "standard-version": "^7.1.0",
    "ts-node": "^8.7.0",
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.8.3"
  }
}
