{
  "name": "i18n-db",
  "version": "1.7.0",
  "description": "A lightweight internationalization tool for managing translations, with JSON file output.",
  "keywords": [
    "i18n",
    "internationalization",
    "l10n",
    "localization",
    "translation",
    "globalization",
    "cli"
  ],
  "author": {
    "name": "Justin Lettau",
    "email": "me@justinlettau.com",
    "url": "https://justinlettau.com"
  },
  "license": "MIT",
  "homepage": "https://github.com/justinlettau/i18n-db",
  "repository": {
    "type": "git",
    "url": "https://github.com/justinlettau/i18n-db"
  },
  "bugs": {
    "url": "https://github.com/justinlettau/i18n-db/issues"
  },
  "preferGlobal": true,
  "scripts": {
    "lint": "eslint . --ext .js,.ts",
    "test": "jest",
    "build": "tsc -p ./tsconfig.json",
    "prepublishOnly": "npm run build",
    "release": "standard-version",
    "format": "prettier --write ."
  },
  "bin": {
    "i18n": "bin/i18n"
  },
  "files": [
    "bin/",
    "dist"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "pretty-quick --staged"
    }
  },
  "dependencies": {
    "chalk": "^4.1.1",
    "cli-table": "^0.3.6",
    "commander": "^7.2.0",
    "csv-parse": "^4.15.4",
    "csv-stringify": "^5.6.2",
    "fs-extra": "^9.1.0",
    "glob": "^7.1.7",
    "inquirer": "^7.3.3",
    "micromatch": "^4.0.4",
    "sqlite3": "^5.0.2",
    "ts-dot-prop": "^1.4.3",
    "ts-util-is": "^1.2.1",
    "typeorm": "^0.2.32",
    "update-notifier": "^5.1.0",
    "xliff": "^5.5.3"
  },
  "devDependencies": {
    "@types/cli-table": "^0.3.0",
    "@types/csv-parse": "^1.2.2",
    "@types/csv-stringify": "^3.1.0",
    "@types/fs-extra": "^9.0.11",
    "@types/glob": "^7.1.3",
    "@types/inquirer": "^7.3.1",
    "@types/jest": "^26.0.23",
    "@types/micromatch": "^4.0.1",
    "@types/update-notifier": "^5.0.0",
    "@typescript-eslint/eslint-plugin": "^4.25.0",
    "@typescript-eslint/parser": "^4.25.0",
    "eslint": "^7.27.0",
    "eslint-config-prettier": "^7.2.0",
    "husky": "^7.0.0",
    "jest": "^26.6.3",
    "prettier": "^2.3.0",
    "pretty-quick": "^3.1.0",
    "standard-version": "^9.3.0",
    "ts-jest": "^26.5.6",
    "ts-node": "^9.1.1",
    "typescript": "^4.3.2"
  }
}
